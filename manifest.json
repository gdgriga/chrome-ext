{
  "manifest_version": 2,
  "name": "Reading List",
  "description": "Store articles locally to read later.",
  "version": "1.0",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_icon": "icons/action.png",
    "default_popup": "src/popup.html"
  }
}
